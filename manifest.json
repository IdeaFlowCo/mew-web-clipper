{
    "manifest_version": 3,
    "name": "Mew Web Clipper",
    "version": "1.0",
    "description": "Chrome extension to quickly clip webpages and highlights to Mew.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "tabs",
        "storage",
        "notifications"
    ],
    "background": {
        "service_worker": "dist/background.bundle.js",
        "type": "module"
    },
    "commands": {
        "clipPage": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Clip current page to Mew"
        }
    },
    "host_permissions": [
        "https://ideaflow-mew-dev.us.auth0.com/*",
        "https://mew-edge.ideaflow.app/*",
        "https://www.youtube.com/api/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "notification.css",
                "notification.js",
                "dist/xmlParser.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}